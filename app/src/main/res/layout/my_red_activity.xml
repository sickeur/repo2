<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.UpOnly.Race_Run.JumpKing.OnlyUpMobile.DemActivities.MyRedActivity"
    android:background="@drawable/shape_of_bg_super"
    >


    <ImageView
        android:id="@+id/imgAds"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:layout_width="400dp"
        android:layout_height="match_parent"/>



    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanks ! "
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textSize="36sp"/>

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wait for 24 hours before using again if possible"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="18sp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAction"
        android:text="start"
        android:background="@drawable/personilzed_super_button"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:fontFamily="@font/lato_bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatButton>

</LinearLayout>